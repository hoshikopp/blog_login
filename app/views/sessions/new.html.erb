<h1>ログイン</h1>

<%= form_with(scope: :session, url: sessions_path) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="form-group">
        <%=f.label :email %>
        <%=f.email_field :email,class: "form-control" %>
      </div>
      <div class="form-group">
        <%=f.label :password %>
        <%=f.password_field :password,class: "form-control" %>
      </div>
        <%=f.submit 'ログインする'%>
    </div>
  </div>
</div>  
<% end %>
