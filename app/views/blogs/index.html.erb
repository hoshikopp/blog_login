<h1>ブログ一覧</h1>

<div class="container">
  <div id="new-blog-link">
     <%= link_to '新規ブログを作成する', new_blog_path, class:"btn btn-primary btn-block" %>
  </div>
  <div class="row">
   <div class="col-md-12 col-sm-6">
    <% @blogs.each do |blog|%>
      <div class = "col-xs-12 col-md-6 blog-panel panel panel-default">
        <div class="panel-heading"><%= blog.id %>.<%= blog.title %></div>
        <div class="panel-body">
            <p><%= blog.content %></p>
            <p><%= blog.created_at %></p>
          <div class="blog-links">
              <%= link_to '詳細を表示する',blog_path(blog.id) ,class:"btn btn-success"%>
          <% if blog.created_by?(current_user) %>
              <%= link_to '編集する',edit_blog_path(blog.id),class:"btn btn-info" %>
              <%= link_to '削除する',blog_path(blog.id),method: :delete ,class:"btn btn-danger",data:{confirm:'本当に削除していいですか？'} %>
          <% end %>
          </div>
      </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
